<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JTea_DPS926_Assignment2.CoinDetailsPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand">
            <Image x:Name="coinImage" Source=""/>
            <Label x:Name="coinSymbol" TextColor="Black" Text="Loading coin symbol..."/>
            <Label x:Name="coinName" TextColor="Black" Text="Loading coin name..."/>
            <Label x:Name="coinPrice" TextColor="Black" Text="Loading coin price..."/>
            <Label x:Name="coinDescription" TextColor="Black" Text="Loading coin description..."/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>